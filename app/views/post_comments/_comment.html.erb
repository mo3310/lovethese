<% post.post_comments.each do |post_comment| %>
<!--<div style="margin-bottom: 5px; padding: 10px;">-->
  <%= link_to user_path(post_comment.user) do %>
    <%= attachment_image_tag post_comment.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
    <%= post_comment.user.name %>
  <% end %>
  <%= post_comment.comment %>
  <%= post_comment.created_at.strftime('%Y/%m/%d') %>
  <% if post_comment.user == current_user %>
    <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), class:"btn btn-sm btn-danger", method: :delete, remote: true %><br>
  <% end %>
<!--</div>-->
<% end %>
