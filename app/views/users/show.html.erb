<main>
<div class="profile-container">
  <div style="color: green;"><%= flash[:notice] %></div>
  <div class="row">
    <div class="col-md-4 offset-md-1">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "50x50", class:"mt-3 rounded-circle"; %>
      <h3 class="profile-name"><%= @user.name %></h3>
      <% if @user.id == current_user.id %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <%= render 'posts/list', posts: @posts %>
    </div>
  </div>
</div>
</main>