  <table class="table">
    <tbody>
      <tr>
        <th><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %></th>
        <th><h3 style="padding: 20px;"><i class="fas fa-user", style="color: #f0ad4e;"></i> <%= user.name %></h3></th>
      </tr>
    </tbody>
  </table>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block", method: :get do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
